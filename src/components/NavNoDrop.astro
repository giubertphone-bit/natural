---
import ModButton from "./modButton.astro";
---

<div class="navContainer">
  <nav class="largeNav">
    <li><a href="/">Home (logo)</a></li>
    <li><a href="/residential">Residential</a></li>
    <li>
      <a href="/commercial">Commercial</a>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/about">About</a></li>
      <li>
        <a href="/contact"
          ><ModButton href="/contact" message="Get a Quote" />
        </a>
      </li>
    </li>
  </nav>
  <nav class="smallNav">
    <div class="item1"><a href="/">Home (logo)</a></div>
    <div class="item2"><a href="/residential">Residential</a></div>
    <div class="item3"><a href="/commercial">Commercial</a></div>
    <div class="item4"><a href="/contact">Contact</a></div>
    <div class="item5"><a href="/about">About</a></div>
    <div class="item6">
      <ModButton href="/quote" message="Get a Quote" />
    </div>
  </nav>
  <div class="divider"></div>
</div>

<style>
  .navContainer {
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: column;
    background-color: var(--main1);
  }
  .smallNav {
    display: none;
  }
  .largeNav {
    justify-content: center;
    align-items: center;
    min-width: 750px;
    max-width: 1400px;
    display: flex;
    max-width: 1000px;
  }
  nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 10px;
  }

  nav li {
    list-style: none;
    cursor: pointer;
    margin: 10px;
  }
  nav a {
    text-decoration: none;
    color: var(--dark3);
    font-size: 16px;
    font-weight: bold;
  }
  nav li:hover {
    color: var(--dark3);
    text-decoration: underline;
  }
  @media (max-width: 800px) {
    nav li {
      margin-bottom: 10px;
    }
    .largeNav {
      display: none;
    }
    .smallNav {
      display: grid;
      grid-template-columns: auto auto auto auto; /* Last column takes remaining space */
      grid-template-rows: repeat(4, auto); /* Define 4 rows explicitly */
      gap: 5px;
      padding: 2px;
    }

    .smallNav > div {
      color: var(--dark3);
      text-align: center;
      padding: 7px;
      font-size: 14px;
      cursor: pointer;
    }
    .smallNav a:hover {
      text-decoration: underline;
    }

    .item1 {
      grid-row: 1 / span 2;
    }

    .item6 {
      grid-column: 4 / 5;
      grid-row: 1 / span 2; /* Only span 2 rows */
    }
  }
  .divider {
    height: 1px;
    background-color: var(--sub2);
    margin: 0px 0;
    width: 100%;
    box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.3);
  }
</style>
