---
// links
// name1   href1
const {
  link1 = "Home",
  href1 = "/",
  link2 = "About",
  href2 = "/about",
  link3 = "Contact",
  href3 = "contact",

  //can add more links here
  // link4 = "Blog",
  // href4 = "/blog",
  //but must be updated in nav-links section
  show = false,
} = Astro.props;
//usage example
// <ModFooter />
// <ModFooter link1="Home" href1="/" link2="About" href2="/about" link3="Contact" href3="/contact" />
//<ModFooter link1="test" href1="test" link2="test" href2="test" link3="test" href3="test" />
---

<footer>
  <div class="container">
    <nav>
      <ul class="nav-links">
        <li><a href={href1}>{link1}</a></li>
        <li><a href={href2}>{link2}</a></li>
        <li><a href={href3}>{link3}</a></li>
        <!-- add more links here if needed -->
        <!-- <li><a href={href4}>{link4}</a></li> -->
      </ul>
    </nav>

    <p>&copy; {new Date().getFullYear()} . All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--accent-2);
    color: var(--primary-1);
    padding: 2rem 1rem;
    font-size: 0.9rem;
  }

  .container {
    max-width: 960px;
    margin: 30px auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    padding: 0;
    margin: 0;
  }

  .nav-links a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--primary-2);
  }

  @media (min-width: 600px) {
    .container {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
