const {
  link1 = "Home",
  href1 = "/",
  link2 = "About",
  href2 = "/about",
  link3 = "Commercial",
  href3 = "/commercial",
  link4 = "Fertilizer",
  href4 = "/fertilizer",
  link5 = "Hard Surface",
  href5 = "/hardsurface",
  link6 = "Irrigation",
  href6 = "/irrigation",
  link7 = "Landscape",
  href7 = "/landscape",
  link8 = "Lawn",
  href8 = "/lawn",
  link9 = "Tree Service",
  href9 = "/treeservice",
  link10 = "Welcome",
  href10 = "/welcome",
  link11 = "Test",
  href11 = "/test",
  //can add more links here
  // link4 = "Blog",
  // href4 = "/blog",
  //but must be updated in nav-links section
  show = false,
} = Astro.props;
//usage example
// <ModFooter />
// <ModFooter link1="Home" href1="/" link2="About" href2="/about" link3="Contact" href3="/contact" />
