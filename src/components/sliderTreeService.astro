---
import { Swiper, SwiperWrapper, SwiperSlide } from "astro-swiper";
---
<Swiper
  options={{    // check options at https://swiperjs.com/swiper-api
    autoplay: {
      delay: 6000,
      disableOnInteraction: true,
      waitForTransition: false,
    },
    effect: 'fade',
  fadeEffect: {
    crossFade: true
  },
    loop: true,
  }}>
  <SwiperWrapper>
    <!-- Slides -->
    <SwiperSlide>
      <img src="/img/treeServiceMain.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/img/treeServiceClear.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/img/treeService.jpg" alt="" />
    </SwiperSlide>
  </SwiperWrapper>
</Swiper>

<style>
  .swiper {
    max-height: 80vh;
   height: auto;
    object-fit: cover;
    object-position: center;
  }

  img {
    width: 100%;
  }
</style>