---
const pages = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
  { name: 'Test', href: '/test' },
];

const currentPath = Astro.url.pathname;
---
<style>
    
  nav {
    display: flex;
    justify-content:center;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #f8f9fa;
    font-family: sans-serif;
   
  }

  .logo {
    font-weight: bold;
    font-size: 1.5rem;
    padding-right: 2rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    text-decoration: none;
    color: #333;
    position: relative;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: #51bd26;
    background-color: #65e9d70a;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #33333346;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
  }

  .hamburger div {
    width: 25px;
    height: 3px;
    background-color: #333;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
      flex-direction: column;
      background-color: #f8f9fa;
      position: absolute;
      top: 60px;
      right: 20px;
      padding: 1rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .nav-links.open {
      display: flex;
       z-index: 9999;
    }

    .hamburger {
      display: flex;
    }
  }
</style>

<nav>
  <div class="logo">MySite</div>

  <div class="hamburger" onclick="document.querySelector('.nav-links').classList.toggle('open')">
    <div></div>
    <div></div>
    <div></div>
  </div>

  <div class="nav-links">
    {pages.map(page => (
      <a
        href={page.href}
        class={`nav-link ${currentPath === page.href ? 'active' : ''}`}
      >
        {page.name}
      </a>
    ))}
  </div>
</nav>