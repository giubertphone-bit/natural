---
const {
  bg = "#e79f23ff",
  color = "#f8f8f2ff",
  hoverColor = "yellow",
  message = "Click Me",
  href = "/",
} = Astro.props;

//  <ModButton href="/" message="Submit" bg="red" hoverColor="blue" color="white" />
---

<div>
  <button>
    {message}
  </button>
</div>

<style define:vars={{ hoverColor, bg, color }}>
  button {
    border: none;
    border-radius: 3px;
    padding: 10px 12px;
    font-size: 12px;
    cursor: pointer;
    background-color: var(--attention1);
    color: var(--dark2);
    font-family: Verdana, Geneva, sans-serif;
    font-weight: 700;
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  }
  button:hover {
    color: var(--dark3);
    background-color: var(--attention2);
  }
</style>
