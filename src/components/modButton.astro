---
const {
  bg = "#e79f23ff",
  color = "#f8f8f2ff",
  hoverColor = "yellow",
  message = "Click Me",
} = Astro.props;

//  <ModButton message="Submit" bg="red" hoverColor="blue" color="white" />
---

<div>
  <button>
    {message}
  </button>
</div>

<style define:vars={{ hoverColor, bg, color }}>
  h1 {
    background-color: var(--bg);
    color: var(--color);
  }

  button {
    border: none;
    border-radius: 3px;
    padding: 10px 15px;
    font-size: 16px;
    cursor: pointer;
    background-color: var(--bg);
    color: var(--color);
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  }
  button:hover {
    color: black;
    background-color: var(--hoverColor);
  }
</style>
